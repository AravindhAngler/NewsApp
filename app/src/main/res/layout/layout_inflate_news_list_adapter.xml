<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeSpoId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_black_transparent"
    android:descendantFocusability="blocksDescendants"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/layout_inflate_news_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/common_black_transparent"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layout_inflate_news_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_inflate_news_list_title"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/common_black_transparent"
            android:textSize="@dimen/text_size_small"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/layout_inflate_news_list_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_inflate_news_list_title"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/common_black_transparent"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/layout_inflate_news_list_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_inflate_news_list_story"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:textColor="@color/common_black_transparent"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</android.support.v7.widget.CardView>